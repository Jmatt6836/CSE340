<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <% if (message) { %>
        <p class="notice"><%= message %></p>
        <% } %>

        <form class="login-form" action="/client/login" method="post">
            <label for="username">Username</label>
            <input type="email" name="username" id="username_input" placeholder="Username:" required >
            <br><span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span><br>
            <label for="password">Password</label>
            <input type="password" name="password" id="password_input" placeholder="Password:" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"required >
            <button type="submit" value="Login">Login</button>
          </form>
          <div class="register_div">
            <h5>No Account?</h5>
            <a href="register"><button type="button">Sign Up</button></a>
          </div>